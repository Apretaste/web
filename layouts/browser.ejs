<!-- SEARCH BAR -->
<div id="search">
	<!-- home & send buttons -->
	<i class="material-icons green-text small icon send" onclick="submit()">send</i>
	<i class="material-icons grey-text small icon home" onclick="apretaste.send({'command':'WEB'})">home</i>
	<i class="material-icons grey-text small icon settings" onclick="settings()">settings</i>

	<!-- back button -->
	<% if(query !== "") { %>
		<i class="material-icons grey-text small icon back" onclick="history.go(-1)">keyboard_backspace</i>
	<% } %>

	<!-- Input -->
	<input id="query" placeholder="Inserte texto o p&aacute;gina a buscar" value="<%= query %>" type="text"/>
</div>

<!-- CONTENT -->
<div id="content">
	{{APP_TEMPLATE_CODE}}
</div>

